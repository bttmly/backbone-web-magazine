$turquoise = #16a085
$pumpkin = #d35400
$police = #45479A
$darkpurple = #1C0113
$accentColor = #098981

*, *:before, *:after
  box-sizing border-box

html
  height 100%

body
  min-height 125%
  font-family 'Open Sans', sans-serif

p
  margin 0 0 1rem 0

a, a:visited
  color $accentColor
  &:active
    color darken( $accentColor, 20% )

img
  max-width: 100%

.page-wrapper
  width 90%
  margin 0 auto

.nav-links
  padding-left 0
  list-style-type none
  display flex
  height 3.5rem
  position relative
  z-index 200
  li
    text-align center
    flex 1
    background white
    border-bottom .5rem solid #333
    > a
      text-decoration underline
      color $accentColor 
      font-weight bold
      display block
      padding .5rem 1rem 1rem
  li.selected-section
    background transparent
    border .5rem solid #333
    border-bottom none
    padding 0
    > a
      color white
      text-shadow 0 0 5px rgba(0, 0, 0, .5)
  &:hover li
    font-family: inherit
  li:not(.selected-section)
    padding .5rem .5rem 0 .5rem
    &:hover 
      background $accentColor
      > a 
        color white
      .nav-link-dropdown
        display block

.category-hero
  position relative
  height 16rem

.category-banner
  margin-top -4.5rem
  height 16rem
  width 100%
  opacity 0
  background-size cover
  background-position center 15%
  position absolute
  border .5rem solid #333
  overflow hidden
  transition-property opacity
  transition-timing-function ease-in-out
  transition-duration .2s
  &:before
    content ""
    display block
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background rgba(0,0,0,.15)
    // z-index -100

  .category-title
    z-index 100
    font-family: 'Playfair Display', sans-serif
    font-weight: 900
    font-style: italic
    font-size: 4rem
    text-align: center
    color white
    margin: 0
    padding-top: 4rem
    text-shadow 0 0 5px rgba(0,0,0,0.5)
    position relative
  .category-title__subtitle
    display block
    font-size 1.5rem
    font-weight normal
 
body[data-page-type="category"]   
  .category-banner
    max-height 24rem

.nav-link-dropdown
  position absolute
  border .5rem solid $accentColor
  top 3rem
  left 0
  text-align left
  background white
  min-height 16.75rem
  width 100%
  padding 1rem
  display none
  .dropdown-columns > div:first-of-type
    padding-left 0
  .dropdown-columns > div:last-of-type
    padding-right 0
    border-right none

.dropdown-columns
  display flex

.dropdown-column
  flex 1
  padding 1rem
  padding-top 0
  border-right 1px dotted gray

.article-snippet-image
  height 0
  padding-bottom 65%
  border 1px solid 
  background-size cover
  background-position center

.dropdown-columns
  margin-bottom 1rem

.dropdown-footer
  background $accentColor
  color white
  a, a:visited
      color white
  p
    text-align center
    margin 0
    height 3rem
    line-height 3rem
    cursor pointer
  .dropdown-category
    font-weight bold

.main-content
  width 40rem
  max-width 100%
  margin 4rem auto
  > article
    margin-bottom 4rem

// default styles ( category, author, etc )
.article-header
  display flex
  margin-bottom 2rem
  .article-image
    flex 1
    background-position center, 15%
    background-size cover
    border 1px solid #666
  .article-info
    flex 1
    margin-right 2rem
  .article-title
    margin 0 0 1rem 0

// single article page only
body[data-page-type="article"]
  .article-header
    display block
    .article-image
      height 16rem
    .article-info
      margin 2rem 0
    .article-title
      font-size 3rem